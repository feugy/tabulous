{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    // "checkJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,

    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@tabulous/*": ["../*"]
    },
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "exclude": ["./node_modules/**", "./coverage/**", "./test_results/**"]
}
