{
  "name": "tabulous",
  "version": "0.0.1",
  "description": "Enable you to play online your table games, on a virtual table, with your friends",
  "author": {
    "name": "Damien Simonin Feugas",
    "email": "damien.simoninfeugas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/feugy/tabulous"
  },
  "packageManager": "pnpm@8.5.1",
  "scripts": {
    "dev:cli": "pnpm -F cli test:dev",
    "dev:server": "pnpm -F server test:dev",
    "dev:games": "pnpm -F games test:dev",
    "dev:game-utils": "pnpm -F game-utils test:dev",
    "dev:web": "pnpm -F web test:dev",
    "format": "prettier --plugin-search-dir=. --write .",
    "lint": "eslint .",
    "migrate": "pnpm -F server migrate",
    "prepare": "husky install",
    "start": "pnpm run -F server -F web --stream start",
    "test": "pnpm -r --stream --if-present t",
    "test:cli": "pnpm -F cli t",
    "test:games": "pnpm -F games t",
    "test:game-utils": "pnpm -F game-utils t",
    "test:server": "pnpm -F server t",
    "test:web": "pnpm -F web t",
    "test:integration": "pnpm -F web test:integration",
    "typecheck": "pnpm run -r --stream --if-present typecheck"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/expect": "^0.34.4",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-svelte": "^2.33.1",
    "eslint-plugin-vitest": "^0.3.1",
    "husky": "^8.0.3",
    "jest-extended": "^4.0.1",
    "lint-staged": "^14.0.1",
    "playwright": "^1.38.0",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --cache --fix",
    "*.{js,ts,svelte,css,md}": "prettier --plugin-search-dir=. --write"
  },
  "pnpm": {
    "patchedDependencies": {
      "@vitest/utils@0.34.4": "patches/@vitest__utils@0.34.4.patch"
    }
  }
}
