{
  "name": "tabulous",
  "version": "0.0.1",
  "description": "Enable you to play online your table games, on a virtual table, with your friends",
  "author": {
    "name": "Damien Simonin Feugas",
    "email": "damien.simoninfeugas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/feugy/tabulous"
  },
  "scripts": {
    "dev:cli": "pnpm --filter cli test:dev",
    "dev:server": "pnpm --filter server test:dev",
    "dev:web": "pnpm --filter web test:dev",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prepare": "husky install",
    "start": "pnpm run -r --if-present start",
    "test": "pnpm -r --if-present t",
    "test:cli": "pnpm --filter cli t",
    "test:server": "pnpm --filter server t",
    "test:web": "pnpm --filter web t",
    "test:integration": "pnpm --filter web test:integration"
  },
  "devDependencies": {
    "@vitest/coverage-c8": "^0.23.4",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.1",
    "svelte": "^3.50.1",
    "vite": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,svelte}": "eslint --cache --fix",
    "*.{js,svelte,css,md}": "prettier --plugin-search-dir=. --write"
  }
}
