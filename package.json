{
  "name": "tabulous",
  "version": "0.0.1",
  "description": "Enable you to play online your table games, on a virtual table, with your friends",
  "author": {
    "name": "Damien Simonin Feugas",
    "email": "damien.simoninfeugas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/feugy/tabulous"
  },
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "prepare": "husky install",
    "start": "run-p -ncs start:**",
    "start:server": "npm start --workspace apps/server",
    "start:web": "npm start --workspace apps/web",
    "test": "run-s -ncs test:**",
    "test:server": "npm t --workspace apps/server",
    "test:web": "npm t --workspace apps/web"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.4.0"
  },
  "lint-staged": {
    "*.{js,svelte}": "eslint --cache --fix",
    "*.{js,svelte,css,md}": "prettier --write"
  }
}
