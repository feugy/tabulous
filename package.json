{
  "name": "tabulous",
  "version": "0.0.1",
  "description": "Enable you to play online your table games, on a virtual table, with your friends",
  "author": {
    "name": "Damien Simonin Feugas",
    "email": "damien.simoninfeugas@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/feugy/tabulous"
  },
  "packageManager": "pnpm@8.5.1",
  "scripts": {
    "dev:cli": "pnpm --filter cli test:dev",
    "dev:server": "pnpm --filter server test:dev",
    "dev:web": "pnpm --filter web test:dev",
    "format": "prettier --plugin-search-dir=. --write .",
    "lint": "eslint .",
    "migrate": "pnpm --filter server migrate",
    "prepare": "husky install",
    "start": "pnpm run -r --stream --if-present start",
    "test": "pnpm -r --stream --if-present t",
    "test:cli": "pnpm --filter cli t",
    "test:games": "pnpm --filter games t",
    "test:server": "pnpm --filter server t",
    "test:web": "pnpm --filter web t",
    "test:integration": "pnpm --filter web test:integration",
    "typecheck": "pnpm run -r --stream --if-present typecheck"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "@vitest/coverage-v8": "^0.34.1",
    "@vitest/expect": "^0.34.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-svelte": "^2.32.4",
    "eslint-plugin-vitest": "^0.2.8",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "playwright": "^1.37.0",
    "prettier": "^3.0.1",
    "prettier-plugin-svelte": "^3.0.3",
    "svelte": "^4.2.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": "eslint --cache --fix",
    "*.{js,ts,svelte,css,md}": "prettier --plugin-search-dir=. --write"
  }
}
